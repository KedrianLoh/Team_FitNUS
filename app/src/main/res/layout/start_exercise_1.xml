<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purplecolor">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topHorizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <TextView
        android:id="@+id/currentExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mainmenubutton_background"
        android:gravity="center"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_25ssp"
        android:textStyle="bold"
        android:text="Dumbbell Shoulder Press"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topHorizontalGuideline" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dashboard_item_1"
        android:clickable="true"
        android:contentDescription="@string/back"
        android:focusable="true"
        app:backgroundTint="@color/background1"
        app:borderWidth="2.25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentExercise"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/repetitions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repetition"
        android:textAlignment="center"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/_30ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/currentExercise"
        app:layout_constraintTop_toBottomOf="@+id/currentExercise" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:indeterminateOnly="false"
        android:max="60000"
        android:progress="60000"
        android:progressDrawable="@drawable/circular_bar"
        android:rotation="-90"
        app:layout_constraintEnd_toEndOf="@+id/repetitions"
        app:layout_constraintStart_toStartOf="@+id/repetitions"
        app:layout_constraintTop_toBottomOf="@+id/repetitions"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"/>

    <TextView
        android:id="@+id/timerInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_70sdp"
        android:text="Rest Countdown"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/progressBar"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="@+id/progressBar" />

    <TextView
        android:id="@+id/countdownMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="46sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/timerInstructions"
        app:layout_constraintTop_toBottomOf="@+id/timerInstructions"
        app:layout_constraintEnd_toStartOf="@+id/Colon"/>

    <TextView
        android:id="@+id/Colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/countdownMinutes"
        app:layout_constraintStart_toEndOf="@+id/countdownMinutes"
        app:layout_constraintTop_toTopOf="@+id/countdownMinutes"
        app:layout_constraintEnd_toStartOf="@+id/countdownSeconds"/>

    <TextView
        android:id="@+id/countdownSeconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="46sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/timerInstructions"
        app:layout_constraintTop_toBottomOf="@+id/timerInstructions"
        app:layout_constraintStart_toEndOf="@+id/Colon" />

    <TextView
        android:id="@+id/countdownMilis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/countdownSeconds"
        app:layout_constraintEnd_toEndOf="@+id/countdownSeconds"
        android:text="000" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:srcCompat="@drawable/gym2" />

    <TextView
        android:id="@+id/currentSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="You are currently doing:\n Set"
        android:textAlignment="center"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/_25ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/setCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 of 10"
        android:textAlignment="center"
        android:textColor="@color/dark_icon"
        android:textSize="@dimen/_34ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentSet" />

    <Button
        android:id="@+id/skipRest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/slate_gray"
        android:drawableLeft="@drawable/cancel_smaller"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Skip Rest"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/completeSet"
        app:layout_constraintBottom_toBottomOf="@id/completeSet" />

    <Button
        android:id="@+id/completeEx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Complete Exercise"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/completeSet"
        app:layout_constraintBottom_toBottomOf="@id/completeSet" />

    <Button
        android:id="@+id/completeRest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/slate_gray"
        android:drawableLeft="@drawable/ic_arms"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Proceed"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/completeSet"
        app:layout_constraintBottom_toBottomOf="@id/completeSet"/>

    <Button
        android:id="@+id/completeSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/slate_gray"
        android:drawableLeft="@drawable/checkmark_smaller"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Complete Set"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setCounter" />

</androidx.constraintlayout.widget.ConstraintLayout>